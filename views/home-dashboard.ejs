<%-include ('./includes/header.ejs') %>
  
  <div class="container py-md-5 container--narrow">
    <%-include ('./includes/flash.ejs') %>
    <div class="text-center">
      <% if(posts.length){ %>
        <h2 class="text-center mb-4">The Latest From Those You Follow</h2>
        <div class="list-group">
          <% var k=0 %>
        <% posts.forEach(function(post){ 
          post.posts.forEach(function(p){%>
            <a href="/post/<%= p._id %>" class="list-group-item list-group-item-action">
              <img class="avatar-tiny" src="<%= avatars[k]%>">
              <strong><%= p.title %></strong> <span class="text-muted small">by <%=p.author.username%> on <%=p.createdAt.getDate()%>/ <%=p.createdAt.getMonth()+1 %> / <%=post.posts[0].createdAt.getFullYear()%></span>
            </a>
            <%  })
          k=k+1
         }) %>
        </div>
      <%}else{%>
        <h2>Hello <strong><%= user.username %> </strong>, your feed is empty.</h2>
        <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
     <% }%>
      
    </div>  
  </div>

<%-include ('./includes/footer.ejs') %>
