<%-include ('./includes/header.ejs') %>

<div class="container py-md-5 container--narrow">
    <%-include ('./includes/flash.ejs') %>
    <%-include ('./includes/profile-shared.ejs') %>
  
    <div class="list-group">
      <% k=0%>
      <% followers.forEach(function(follower){ %>
        <a href="/profile/<%= follower.authorUsername %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%=avatars[k]%>">
          <strong><%= follower.authorUsername %></strong> 
        </a>
        <% k=k+1%>
      <% }) %>
      
    </div>
  </div>

  <%-include ('./includes/footer.ejs') %>